rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is auditor
    function isAuditor() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'auditor';
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Admins can read all users
      allow read: if isAdmin();
      
      // Only allow creating user during registration
      allow create: if isAuthenticated();
      
      // Users can update their own profile
      allow update: if isAuthenticated() && isOwner(userId);
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Items collection
    match /items/{itemId} {
      // Anyone authenticated can read items
      allow read: if isAuthenticated();
      
      // Only admins can create, update, delete items
      allow create, update, delete: if isAdmin();
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      // Admins can read all tasks
      allow read: if isAdmin();
      
      // Auditors can read tasks assigned to them
      allow read: if isAuditor() && 
                    resource.data.assignedTo == request.auth.uid;
      
      // Only admins can create and delete tasks
      allow create, delete: if isAdmin();
      
      // Admins can update any task
      allow update: if isAdmin();
      
      // Auditors can update tasks assigned to them (for submissions)
      allow update: if isAuditor() && 
                      resource.data.assignedTo == request.auth.uid &&
                      request.resource.data.status in ['in_progress', 'submitted'];
    }
    
    // Reports collection
    match /reports/{reportId} {
      // Anyone authenticated can read reports
      allow read: if isAuthenticated();
      
      // Only admins can create and manage reports
      allow create, update, delete: if isAdmin();
    }
  }
}
